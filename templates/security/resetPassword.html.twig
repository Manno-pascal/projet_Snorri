{% extends 'security.html.twig' %}

{% block title %}Snorri | Connexion{% endblock %}
{% block body %}

    <form method="post">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-xxl-6 col-xl-7 col-lg-7 col-md-7 col-sm-8 col-12">
                <div>

                    <div class="card custom-card">

                        <div class="card-body p-5">
                            <div class="d-flex justify-content-center">
                                <img src="{{ asset('theme/assets/images/brand-logos/desktop-logo.png') }}" alt="logo" class="desktop-logo w-25 my-2">
                            </div>
                            <p class="h5 fw-semibold mb-5">Rénitialisation du mot de passe</p>
                            {{ form_start(form) }}
                            {{ form_row(form.password) }}
                            <button type="submit" class="btn btn-primary">Rénitialiser</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}



