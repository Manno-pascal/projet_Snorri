{% extends 'base.html.twig' %}

{% block title %}Snorri | Nouveau fil de discussion{% endblock %}

{% block body %}
    {% include "layout/_title.html.twig" with {'title' : "Forum", 'subTitle' : "Ajouter un fil de discussion"} %}
    <div class="d-flex justify-content-center w-100">
        {{ form_start(form) }}
        <div class="bg-white p-4 w-100 rounded">
            <div class="d-flex justify-content-center m-2">
                <div class="w-50 m-1">
                    {{ form_label(form.thread.title) }}
                    {{ form_widget(form.thread.title) }}
                    {{ form_errors(form.thread.title) }}
                </div>
                <div class="w-50 m-1">
                    {{ form_label(form.thread.category) }}
                    {{ form_widget(form.thread.category) }}
                    {{ form_errors(form.thread.category) }}
                </div>
            </div>
            <div class="d-flex justify-content-center m-2">
                <div class="w-100 m-1">
                    {{ form_label(form.content ) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>
            <button class="btn btn-primary">
                <em class="bx bx-send side-menu__icon me-3"></em>
                <span>Cr√©er le fil</span>
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
