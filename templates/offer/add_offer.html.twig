{% extends 'base.html.twig' %}

{% block title %}Snorri | Proposer une offre{% endblock %}

{% block body %}
    {% include "layout/_title.html.twig" with {'title' : "Offres d'emploi", 'subTitle' : "Proposition d'offre"} %}
    <div {{ stimulus_controller('addOffer') }} data-addOffer-popup-value="{{ popup }}" class="d-flex justify-content-center w-100">
        {{ form_start(form) }}
        <div class="bg-white p-4 w-100 rounded">
            <div class="d-flex justify-content-center m-2">
                <div class="w-50 m-1">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="w-50 m-1">
                    {{ form_label(form.location) }}
                    {{ form_widget(form.location) }}
                    {{ form_errors(form.location) }}
                </div>
            </div>
            <div class="d-flex justify-content-center m-2">
                <div class="w-50 m-1">
                    {{ form_label(form.contract_type) }}
                    {{ form_widget(form.contract_type) }}
                    {{ form_errors(form.contract_type) }}
                </div>
                <div class="w-50 m-1">
                    {{ form_label(form.salary) }}
                    {{ form_widget(form.salary) }}
                    {{ form_errors(form.salary) }}
                </div>
            </div>
            <div class="d-flex justify-content-center m-2">
                <div class="w-50 m-1">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}
                    {{ form_errors(form.date) }}
                </div>
                <div class="w-50 m-1">
                </div>
            </div>
            <div class="d-flex justify-content-center m-2">
                <div class="w-100 m-1">
                    {{ form_label(form.description ) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <button class="btn btn-primary" id="submitBtn">
                <em class="bx bx-send side-menu__icon me-3"></em>
                <span>Proposer une offre</span>
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}